{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "C:/MinGW/include",          // Caminho para os cabeçalhos do MinGW
                "C:/MinGW/include"  // Caminho para headers específicos do GCC (versão pode variar)
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/MinGW/bin/gcc.exe", // Caminho para o compilador GCC
            "cStandard": "c11", // Versão do C (pode ajustar conforme necessário)
            "cppStandard": "c++17" // Versão do C++ (se estiver usando C++)
        }
    ],
    "version": 4
}
